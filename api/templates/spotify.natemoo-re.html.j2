<svg width="320" height="{{height}}" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-labelledby="cardTitle" role="img">
  <title id="cardTitle">Now playing on Spotify</title>
  <foreignObject width="320" height="{{height}}">
    <style>
      div {
        font-family: -apple-system, BlinkMacSystemFont, Segoe UI, Helvetica, Arial, sans-serif, Apple Color Emoji, Segoe UI Emoji;
      }

      .container {
        display: flex;
        align-items: center;
        border-radius: 10px;
        padding: 10px 10px;
      }

      .cover-link {
        height: 64px;
      }

      .cover {
        border-radius: 1px;
        margin-right: 10px;
      }

      .status {
        text-align: center;
        font-weight: bold;
        margin-bottom: 8px;
      }

      .playing {
        color: #53b14f;
      }

      .not-playing {
        color: #ff1616;
      }

      .artist, .host {
        color: #121212;
        font-weight: 500;
        font-size: 14px;
        margin-bottom: 3px;
      }

      .song, .episode {
        color: #212122;
        font-size: 14px;
        margin-bottom: 18px;
      }

      @media (prefers-color-scheme: light) {
        .artist, .host { color: #121212; }
        .song, .episode { color: #212122; }
      }

      @media (prefers-color-scheme: dark) {
        .artist, .host { color: #f4f4f4; }
        .song, .episode { color: #dbdbdc; }
      }
    </style>

    <div xmlns="http://www.w3.org/1999/xhtml" class="container">
      {% if playing_type == "music" %}
        <a href="{{song_link}}" target="_BLANK" class="cover-link">
          <img src="{{cover_image}}" width="64" height="64" class="cover" />
        </a>
        <div>
          <div class="artist">{{artist_name}}</div>
          <div class="song">{{song_name}}</div>
        </div>
      {% elif playing_type == "podcast" %}
        <a href="{{episode_link}}" target="_BLANK" class="cover-link">
          <img src="{{cover_image}}" width="64" height="64" class="cover" />
        </a>
        <div>
          <div class="host">{{podcast_host}}</div>
          <div class="episode">{{episode_title}}</div>
        </div>
      {% else %}
        <div class="status not-playing">Nothing playing on Spotify</div>
      {% endif %}
    </div>
  </foreignObject>
</svg>